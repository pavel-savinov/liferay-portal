{namespace com.liferay.layout.content.page.editor.web.FloatingToolbarContentPanel}

/**
 * FloatingToolbarSpacingPanel
 */
{template .render}
	{@param? _handleCreateContentClick: any}
	{@param? selectedItems: list<?>}

	<div class="floating-toolbar-content-panel p-3">
		<button
			class="btn btn-block btn-secondary btn-sm"
			data-onclick="{$_handleCreateContentClick}"
		>
			{msg desc=""}create-new-content{/msg}

			<span class="badge badge-primary ml-2">
				{if $selectedItems}
					{length($selectedItems)}
				{else}
					0
				{/if}
			</span>
		</button>
	</div>
{/template}
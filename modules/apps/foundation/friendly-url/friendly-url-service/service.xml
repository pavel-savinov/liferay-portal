<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.0.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_0_0.dtd">

<service-builder auto-namespace-tables="false" package-path="com.liferay.friendly.url">
	<namespace>FU</namespace>
	<entity local-service="true" name="FriendlyURL" remote-service="false" uuid="true">

		<!-- PK fields -->

		<column name="friendlyURLId" primary="true" type="long" />

		<!-- Group instance -->

		<column name="groupId" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="classNameId" type="long" />
		<column name="classPK" type="long" />
		<column name="urlTitle" type="String" />
		<column name="main" type="boolean" />

		<!-- Finder methods -->

		<finder name="G_C" return-type="Collection">
			<finder-column name="groupId" />
			<finder-column name="classNameId" />
		</finder>
		<finder name="C_G_C_C" return-type="Collection">
			<finder-column name="companyId" />
			<finder-column name="groupId" />
			<finder-column name="classNameId" />
			<finder-column name="classPK" />
		</finder>
		<finder name="C_G_C_U" return-type="FriendlyURL">
			<finder-column name="companyId" />
			<finder-column name="groupId" />
			<finder-column name="classNameId" />
			<finder-column name="urlTitle" />
		</finder>
		<finder name="C_G_C_C_U" return-type="FriendlyURL">
			<finder-column name="companyId" />
			<finder-column name="groupId" />
			<finder-column name="classNameId" />
			<finder-column name="classPK" />
			<finder-column name="urlTitle" />
		</finder>
		<finder name="C_G_C_C_M" return-type="FriendlyURL">
			<finder-column name="companyId" />
			<finder-column name="groupId" />
			<finder-column name="classNameId" />
			<finder-column name="classPK" />
			<finder-column name="main" />
		</finder>
	</entity>
	<entity local-service="true" name="FriendlyURLLocalization" remote-service="false">

		<!-- PK fields -->

		<column name="friendlyURLLocalizationId" primary="true" type="long" />

		<!-- Group instance -->

		<column name="groupId" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />

		<!-- Other fields -->

		<column name="friendlyURLId" type="long" />
		<column name="urlTitle" type="String" />
		<column name="languageId" type="String" />

		<finder name="G_F" return-type="Collection">
			<finder-column name="groupId" />
			<finder-column name="friendlyURLId" />
		</finder>
		<finder name="G_F_L" return-type="FriendlyURLLocalization" unique="true">
			<finder-column name="groupId" />
			<finder-column name="friendlyURLId" />
			<finder-column name="languageId" />
		</finder>
		<finder name="G_U_L" return-type="FriendlyURLLocalization" unique="true">
			<finder-column name="groupId" />
			<finder-column name="urlTitle" />
			<finder-column name="languageId" />
		</finder>

		<reference entity="FriendlyURL" package-path="com.liferay.friendly.url" />
	</entity>
	<exceptions>
		<exception>DuplicateFriendlyURL</exception>
		<exception>FriendlyURLLength</exception>
	</exceptions>
</service-builder>